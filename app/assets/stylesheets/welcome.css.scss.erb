body { background: url(<%= asset_path 'bg_blue.png' %>) repeat-x top left fixed;}
div#go-top{
	top: 500px;
	left: 1120px;
	position:fixed;
	_position:absolute;
	background-repeat:repeat-x;
	z-index:3;
}

div#paginate{
	
}
div#paginate a{
  font-size: 14px;
  font-weight: 500;
  border:1px solid #dddddd;
  _border:1px solid #dddddd;
  padding: 6px;
  margin: 10px 2px;
  background: #eeeeee;
  display: inline;
}
div#paginate span{
  font-size: 14px;
  font-weight: 500;
  border:1px solid #ccc;
  _border:1px solid #ccc;
  padding: 6px;
  margin: 10px 2px;
  background: #dddddd;
  display: inline;
}
/* root page */
ul,li,dl,dd,dt,h1,h2,h3,h4,h5,h6,h6,form{
	margin:0px;
	padding:0px;
}
li{
	list-style:none;
}
.root_case{
	margin:auto;
	width:600px;
}
.root_logo{
	margin:50px auto 0 auto;
	width:240px;
	height:62px;
}
.root_title{
	margin:auto;
	width:233px;
	height:24px;
	font-family:arial,helvetica,sans-serif;
	font-size:14px;
	color:#949494;
	padding:0 7px 0 0;
	text-align:right;
}
.root_title span{
	color:#FF0000;
	font-family:arial,helvetica,sans-serif;
	font-size:14px;
}
.root_suggest{
	margin:0 0 0 15px;
	width:560px;
	color:#949494;
	font-size:12px;
}
.root_suggest span{
	padding:0 4px;
	font-family:arial,helvetica,sans-serif;
	font-size:14px;
}
.root_suggest a{
	font-size:14px;
}
.root_menu{
	margin:auto;
	width:450px;
}
.root_menu_{
	float:left;
	padding:0 7px;
	font-weight:bold;
	color:#000;
}
.root_menu_ a {
	font-size: 12px;
	color: #336699;
	font-weight:normal;
}
.root_menu_ a:link {
	text-decoration: none;
	color: #336699;
}
.root_menu_ a:visited {
	text-decoration: none;
	color: #336699;
}
.root_menu_ a:hover {
	text-decoration: underline;
	color: #FF3300;
}
.root_menu_ a:active {
	text-decoration: none;
	color: #336699;
}

.root_form{
	margin:0 0 0 65px;
	width:590px;
	height:57px;
	background:url(<%= asset_path 'form_bg.jpg' %>);
	background-position:0px 0px;
	background-repeat:no-repeat;
}
.root_form_error{
	float:left;
	width:15px;
	height:1px;
}
.root_section{
	margin: 0 0 0 70px;
	pading: 12px;
	background: #ffccoo;
}
.root_query{
	margin:13px 0 0 0;
	float:left;
	width:356px;	
}
.root_query input{
	padding:2px 4px;
	*padding:1px 4px;
	_padding:1px 4px;
	width:346px;
	*width:338px;
	_width:338px;
	height:24px;
	line-height:24px;
	font-family:微软雅黑;
	font-size:18px;
	letter-spacing:1px;
	border:none;
	*border:1px solid #FFF;
	_border:1px solid #FFF;
	color:#336699;
}
.root_ongo{
	margin:13px 0 0 0;
	float:left;
	height:24px;
	width:20px;
	cursor:pointer;
}
.root_con{
	float:left;
	margin:7px auto 0 auto;
	padding:0 0 0 12px;
	width:88px;
	height:39px;
}
.root_con input{
	width:88px;
	height:39px;
	background:url(<%= asset_path 'form_bt2.gif' %>);
	border:none;
	font:宋体;
	font-size:14px;
	line-height:26px;
	cursor:pointer;
}
.root_height{
	padding:0 0 0 30px;
	float:left;
	font-size:14px;
	color:#336699;
	width:30px;
	height:50px;
	line-height:50px;
}
.root_height a {
	font-size: 14px;
	color: #336699;
}
.root_height a:link {
	text-decoration: none;
	color: #336699;
}
.root_height a:visited {
	text-decoration: none;
	color: #336699;
}
.root_height a:hover {
	text-decoration: underline;
	color: #FF3300;
}
.root_height a:active {
	text-decoration: none;
	color: #336699;
}
.root_show{
	margin:auto;
	width:760px;
}
